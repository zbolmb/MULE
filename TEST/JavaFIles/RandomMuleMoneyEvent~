public class RandomMuleMoneyEvent extends RandomEvent {

    private int money;
    
    public RandomMuleMoneyEvent() {
        this.money = getAmount();
        super("YOUR MULE WAS JUDGED 'BEST BUILT' AT THE COLONY FAIR. YOU WON $" + this.money + ".");
    }
    
    @Overrides
    protected String generate() {
        Configurations.curPlayer.money += money;
    }
    
    private int getAmount() {
        return ((int) (Math.random() * 10)) * 100;
    }
}
