public class RandomCharityMoneyEvent extends RandomEvent {

    private int money;
    
    public RandomCharityMoneyEvent() {
        super("A CHARITY FROM YOUR HOME-WORLD TOOK PITY ON YOU AND SENT $?.");
    }
    
    @Override
    protected String generate() {
        Configurations.curPlayer.money *= 3;
        
        return msg;
    }
}
