public class RandomMuleMoneyEvent extends RandomEvent {

    private int money;
    
    public RandomMuleMoneyEvent() {
        super("YOUR MULE WAS JUDGED 'BEST BUILT' AT THE COLONY FAIR. YOU DOUBLED YOUR MONEY.");
    }
    
    @Override
    protected String generate() {
        Configurations.curPlayer.money *= 2;
        
        return msg;
    }
}
